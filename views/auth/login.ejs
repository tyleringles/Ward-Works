<section class="auth-page">
  <div class="auth-card">
    <h1>Leader Login</h1>

    <p class="auth-subtitle">
      Sign in to manage the ward directory, callings, and attendance.<br />
      <strong>Sample Accounts (for demo only):</strong><br />
      • Email: admin@wardworks.test — Password: admin123<br />
      • Email: testmem@tryme.org — Password: test123
    </p>

    <%
      // If the controller passes an errorMessage (e.g., bad login),
      // show it in a red error box above the form.
    %>
    <% if (errorMessage) { %>
      <div class="auth-error"><%= errorMessage %></div>
    <% } %>

    <!--
      Login form
      Submits to POST /auth/login.
      authController.postLogin will:
        • Read req.body.email and req.body.password
        • Validate the user
        • Create a session on success
    -->
    <form action="/auth/login" method="POST" class="auth-form">
      <div class="auth-field">
        <label for="email">Email</label>
        <!-- Email field becomes req.body.email -->
        <input
          type="email"
          id="email"
          name="email"
          required
          placeholder="you@example.com"
        />
      </div>

      <div class="auth-field">
        <label for="password">Password</label>
        <!-- Password field becomes req.body.password -->
        <input
          type="password"
          id="password"
          name="password"
          required
          placeholder="••••••••"
        />
      </div>

      <div class="auth-actions">
        <button type="submit" class="ww-btn ww-btn-primary">Login</button>

        <!-- Link to the signup page (GET /auth/signup) -->
        <a href="/auth/signup" class="ww-btn ww-btn-secondary">
          Create an account
        </a>
      </div>
    </form>
  </div>
</section>
